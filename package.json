{
  "name": "x402resolve-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "tests/*",
    "examples/*"
  ],
  "scripts": {
    "test": "npm run test:sdk && npm run test:middleware && npm run test:agent && npm run test:e2e && npm run test:escrow",
    "test:sdk": "cd packages/x402-sdk && npm test",
    "test:middleware": "cd packages/x402-middleware && npm test",
    "test:agent": "cd packages/agent-client && npm test",
    "test:e2e": "cd tests/e2e && npm test",
    "test:escrow": "cd packages/x402-escrow && anchor test",
    "build": "npm run build --workspaces --if-present",
    "build:sdk": "cd packages/x402-sdk && npm run build",
    "build:middleware": "cd packages/x402-middleware && npm run build",
    "build:agent": "cd packages/agent-client && npm run build"
  },
  "dependencies": {
    "@solana/web3.js": "^1.98.4",
    "bs58": "^6.0.0"
  },
  "devDependencies": {
    "typescript": "^5.5.3"
  }
}
