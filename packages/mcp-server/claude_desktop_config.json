{
  "mcpServers": {
    "kamiyo-security": {
      "command": "python3.11",
      "args": [
        "-m",
        "mcp.server"
      ],
      "cwd": "/absolute/path/to/kamiyo",
      "env": {
        "MCP_JWT_SECRET": "YOUR_JWT_SECRET_HERE",
        "KAMIYO_API_URL": "https://api.kamiyo.io",
        "ENVIRONMENT": "production",
        "STRIPE_SECRET_KEY": "sk_live_...",
        "DATABASE_URL": "sqlite:///data/kamiyo.db"
      }
    }
  }
}
