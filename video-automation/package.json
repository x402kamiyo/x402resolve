{
  "name": "x402resolve-video-automation",
  "version": "1.0.0",
  "description": "Automated video generation for x402Resolve hackathon submission",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "generate": "npm run build && node dist/index.js",
    "audio-only": "npm run build && node dist/index.js --audio-only",
    "scene": "npm run build && node dist/index.js --scene",
    "dry-run": "npm run build && node dist/index.js --dry-run",
    "clean": "rm -rf temp/* output/*",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "video",
    "automation",
    "hackathon",
    "solana",
    "x402"
  ],
  "author": "KAMIYO <dev@kamiyo.ai>",
  "license": "MIT",
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "dotenv": "^16.3.1",
    "ffmpeg-static": "^5.2.0",
    "ffprobe-static": "^3.1.0",
    "fluent-ffmpeg": "^2.1.2",
    "openai": "^4.20.0",
    "puppeteer": "^21.6.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/fluent-ffmpeg": "^2.1.24",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
