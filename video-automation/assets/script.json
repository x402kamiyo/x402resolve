    {
      "id": 2,
      "name": "architecture",
      "duration": 25,
      "narration": {
        "text": "The architecture is simple. When an agent consumes an API, payment goes into a Solana escrow account. Our quality oracle scores the response from zero to one hundred. If quality is below eighty, the agent gets a proportional refund automatically. No intermediaries. No admin keys. Pure PDA-based escrow.",
        "voice": "nova",
        "speed": 1.05,
        "outputFile": "temp/audio/scene-02.mp3"
      },
